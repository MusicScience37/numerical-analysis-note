\ProvidesPackage{kdesign}

%ヘッダーとフッター
\RequirePackage{fancyhdr}

\fancypagestyle{kenta}{%   %%% 普通のページ
\fancyhead[l]{\ktitles}% タイトル
\fancyhead[r]{\rightmark}%
\fancyfoot[c]{\thepage}%
\renewcommand{\headrulewidth}{0.5pt}%
}

\fancypagestyle{kentaf}{%   %%% フッターのページ番号だけ
\fancyhead{}%
\renewcommand{\headrulewidth}{0pt}%
\fancyfoot[c]{\thepage}%
}

\def\kpageord{\pagestyle{kenta}}
\def\kpagetoc{\pagestyle{kentaf}}


%section
\def\presectionname{第}
\def\postsectionname{章}

\renewcommand{\section}{%
\@startsection{section}{1}{\z@}%
{.5\Cvs \@plus3\Cvs \@minus.2\Cvs}%
{.5\Cvs \@plus.3\Cvs}%
{\reset@font\LARGE\bfseries\ksec}%
}

\newcommand{\ksec}[1]{%
#1\nopagebreak[4]%
\vskip-.5\Cvs%
\noindent\hrulefill%
\thispagestyle{kentaf}%
\suppressfloats[t]%
}

\renewcommand{\sectionmark}[1]{\markright{\thesection\quad #1}}
\renewcommand{\subsectionmark}[1]{\relax}

%title (for articles)
\def\@maketitle{%
\newpage\null
\vskip 2em
\begin{flushleft}%
   \let\footnote\thanks
   {\fontsize{3.5em}{3.5em}\selectfont \@title \par}%
   \vskip 1.5em
   {\large
      \lineskip .5em
      \@author%
   \par}%
   \vskip 1em
   {\large \@date}%
\end{flushleft}%
\par\vskip 1.5em
\ifvoid\@abstractbox\else\centerline{\box\@abstractbox}\vskip1.5em\fi
}